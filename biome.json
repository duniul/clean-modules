{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": false
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "useTemplate": "off",
        "noUnusedTemplateLiteral": "off"
      }
    }
  },
  "files": {
    "ignore": ["**/*.json"]
  }
}
